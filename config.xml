<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="khleuven.mobile.ballinhole"
        versionCode="16"
        version="1.0.0">

    <name>Ball In Hole</name>

    <description>
        Ball in Hole Game
    </description>

    <author href="http://www.jelteliekens.be" email="jelteliekens@pandora.be">
        Jelte Liekens
    </author>

    <preference name="permissions" value="none"/>

    <preference name="phonegap-version" value="3.1.0"/>
    <preference name="orientation" value="portrait"/>
    <preference name="target-device" value="handset"/>
    <preference name="fullscreen" value="true"/>
    <preference name="webviewbounce" value="false"/>
    <preference name="stay-in-webview" value="false"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="exit-on-suspend" value="true"/>
    <preference name="show-splash-screen-spinner" value="true"/>
    <preference name="auto-hide-splash-screen" value="true"/>
    <preference name="disable-cursor" value="false"/>
    <preference name="android-minSdkVersion" value="10"/>
    <preference name="android-installLocation" value="auto"/>

    <icon src="img/icon.png"/>
    <icon src="img/icon.png" gap:platform="ios" width="57" height="57"/>
    <icon src="img/icon.png" gap:platform="ios" width="72" height="72"/>
    <icon src="img/icon.png" gap:platform="ios" width="114" height="114"/>
    <icon src="img/icon.png" gap:platform="ios" width="144" height="144"/>
    <icon src="img/icon.png" gap:platform="android" gap:density="ldpi"/>
    <icon src="img/icon.png" gap:platform="android" gap:density="mdpi"/>
    <icon src="img/icon.png" gap:platform="android" gap:density="hdpi"/>
    <icon src="img/icon.png" gap:platform="android" gap:density="xhdpi"/>
    <icon src="img/icon.png" gap:platform="blackberry"/>
    <icon src="img/icon.png" gap:platform="blackberry" gap:state="hover"/>
    <icon src="img/icon.png" gap:platform="winphone"/>
    <icon src="img/icon.png" gap:platform="winphone" gap:role="background"/>

